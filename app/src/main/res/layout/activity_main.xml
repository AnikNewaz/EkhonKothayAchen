<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appmaester.ekhonkothayachen.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/titleshape"
        android:text="  এখন কোথায় আছেন?  "
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_below="@+id/titleTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="অক্ষাংশঃ "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_below="@+id/latTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="দ্রাঘিমাংশঃ "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_below="@+id/longTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="সঠিকতাঃ"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_below="@+id/accuTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="উচ্চতাঃ"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_below="@+id/altTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="স্থানঃ "
        android:textSize="18sp"
        android:textStyle="bold" />

</android.widget.RelativeLayout>
